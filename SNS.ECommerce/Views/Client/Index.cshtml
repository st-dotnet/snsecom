@{
    Layout = "_Layout";
}
<div class="container">
    <div class="header-client">
<h3>Product Listing</h3>
    </div>
    <div class="row">
        @foreach (var product in ViewBag.ProductList)
        {
            <div class="col-md-4 col-lg-3 g-mb-30">
                <div class="card boxgrid">
                    <article class="u-shadow-v18 g-bg-white text-center rounded g-px-20 g-py-40 g-mb-5">
                        <div class="prod-img">
                            <img src="@product.url"  class="d-inline-block img-fluid mb-4" alt="@product.SKU">
                        </div>
                        
                        <h4 class="h5 g-color-black g-font-weight-600 g-mb-10">@product.SKU</h4>
                        <p>@product.Description</p>
                        <span class="price">$@product.Price</span>
                    </article>

                    <div class="d-flex justify-content-center">

                        <p class="card-text">
                            <a class="btn btn-detail" asp-action="Details" asp-route-id="@product.ProductId">
                                <i class="bi bi-eye-fill"></i> Show Details
                            </a>
                            <a class="btn btn-addcart" id="addToCart" data-id="@product.ProductId">
                                <i class="bi bi-cart-plus"></i> Add to Cart</a>
                            <br />
                            <br />
                        </p>
                    </div>
                </div>
             
            </div>
        }
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/product.js"></script>
    <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.3.1.js"></script>

<style>


    .header-client {
        text-align: center;
        padding: 50px 0 35px 0px;
    }

        .header-client h3 {
            font-size: 30px;
            position: relative;
        }

            .header-client h3:before {
                position: absolute;
                content: '';
                width: 70px;
                height: 3px;
                background: #15c9ed;
                bottom: -18px;
                left: 50%;
                transform: translateX(-50%);
            }

    .card.boxgrid {
        margin-bottom: 30px;
    }

        .card.boxgrid h4 {
            font-size: 22px;
        }

        .card.boxgrid p {
            font-size: 18px;
            margin: 10px 0 10px 0;
        }

        .card.boxgrid span.price {
            color: #f00;
            font-size: 18px;
            margin: 0 0 8px 0;
            display: block;
            font-weight: 500;
        }

     
        .card.boxgrid a.btn-detail {
            background: #5c5c5c;
            color: #fff;
        }

        .card.boxgrid a#addToCart {
            background: #15c9ed;
            color: #fff;
        }

        .card.boxgrid a {
            font-size: 16px;
        }

    .prod-img {
        height: 220px;
        position: relative;
        padding: 20px;
        width: 100%;
        max-width: 85%;
        margin: 0 auto;
    }

        .prod-img img {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%,-50%);
        }



</style>

    <script>
        productIndex.init()
    </script>
}