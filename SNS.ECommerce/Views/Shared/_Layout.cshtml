<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SNSEcom</title>
    <link href="~/Sites/apputils.css" rel="stylesheet"/>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @(RenderSection("Scripts", false))

</head>
<body>
    <header class="header-bg header-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                @*<img src="~/images/logo.png" class="pt-45 pb-80" />*@
                @*<a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index">Product</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="navbar-brand" href="@Url.Action("Index", "Product")">Product</a> 
                        </li>
                        <li class="nav-item">
                            <a class="navbar-brand" href="@Url.Action("Index", "Client")">Client</a>
                        </li>
                        <li class="nav-item">
                            <a class="navbar-brand" href="@Url.Action("Index", "Cart")">Cart<p style="font-family:Verdana;float:right;"><i class="fa fa-shopping-cart"></i></p></a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <section id="container">
        @RenderBody()
    </section>
    @(RenderSection("PageLevelScripts", false))
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - SNSEcom - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

</body>
</html>