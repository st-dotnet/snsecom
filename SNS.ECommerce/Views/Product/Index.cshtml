@{
    Layout = "_Layout";
}
<style>
    .slick-add-image {
        float: right;
        margin-bottom: 24px;
        display: block;
    }
        .slick-add-image a {
            background-color: #0d6efd;
            border-radius: 5px;
            color: #fff;
            font-size: 15px;
            text-decoration: none;
            padding: 11px 20px;
        }

       .slick-add-image a:hover {
                background-color: #1c5fc1;
              
            }
    header.header-bg {
        background: #f3f3f3;
        padding: 15px;
        margin-bottom: 30px;
    }
</style>
<div class="slick-add-image">
    <a href="#" id="btnUplaodFile" class="plus-icon">Upload File</a>
</div>
<table id="ProductTable" class="table table-border table-custom-list table-hover" style="width:100%">
    <thead>
        <tr style="background: #f5f5f5;">
            <td>SKU</td>
            <td>Price</td>
            <td>Quantity</td>
            <td>Description</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in ViewBag.ProductList)
        {
            <tr>
                <td>@product.SKU</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@product.Description</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = product.ProductId }) |
                    @Html.ActionLink("Details", "Details", new { id = product.ProductId })  |
                    @Html.ActionLink("Delete", "Delete", new { id = product.ProductId })
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="uploadFileModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close closeModal" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div>
                @using (Html.BeginForm("UploadFile", "Product", FormMethod.Post, new { enctype = "multipart/form-data", role = "form", id = "formUploadFile" }))
                {
                    <div class="modal-body">
                        <div class="form-group border-bottom-row">
                            <div class="custom-row p-0">
                                <div class="col-xs-12 col-lg-4">
                                    <label class="control-label pt-0 mb-0">Upload Excel File</label>
                                </div>
                                <div class="col-xs-12 col-lg-8">
                                    <input type="file" id="FileTestUpload" name="file" class="form-control custom-file-hidden" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn btn-secondary closeModal" data-dismiss="modal">Close</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#ProductTable").DataTable({
            });
        });
    </script>
    <script>
        $(document).on("click", "a#btnUplaodFile", function () {
            $("#uploadFileModal").show();
        });
        $(".closeModal").click(function () {
            $("#uploadFileModal").hide();
        });

        $(".closeModal").on("click")
        $("#formUploadFile").submit(function (e) {
            debugger;
            form = this;
            ctrl = $(this);
            e.preventDefault();
            var formData = new FormData(form);

            var fileUploaded = document.forms['formUploadFile']['FileTestUpload'].files.length > 0;
            if (!fileUploaded) {
                alert("Please select file");
                return;
            }//if
            $.ajax({
                type: "POST",
                url: ctrl.attr("action"),
                data: formData,
                cache: false,
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data) {
                        alert("Uploaded");
                    } else {
                        alert("Error");
                    }
                }

            });
        });
    </script>
       
}